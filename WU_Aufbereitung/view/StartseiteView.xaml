<Window x:Class="WU_Aufbereitung.view.StartseiteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WU_Aufbereitung.view"
        mc:Ignorable="d"
        Title="StartseiteView" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnDateiAuswaehlen" Content="Datei auswählen" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="256" Height="53" FontWeight="Bold" FontSize="16" Click="btnDateiAuswaehlenClick"/>
        <Button x:Name="btnEinstellungen" Content="Einstellungen" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Height="43" Width="80" Click="btnEinstellungClick" Margin="704,0,0,4" Grid.RowSpan="3"/>

    </Grid>
</Window>